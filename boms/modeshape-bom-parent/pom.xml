        <version.jcommander>1.5</version.jcommander>
        <version.wsdl4j>1.6.2</version.wsdl4j>
        <version.eclipse.equinox.common>3.3.0-v20070426</version.eclipse.equinox.common>
        <version.eclipse.jdt.core>3.3.0-v_771</version.eclipse.jdt.core>
        <version.eclipse.core.resources>3.3.0-v20070604</version.eclipse.core.resources>
