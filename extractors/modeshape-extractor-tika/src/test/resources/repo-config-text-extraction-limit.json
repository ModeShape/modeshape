{
    "name" : "Test Repository",
    "jndiName" : "java:jcr/TestRepository",
    "workspaces" : {
        "default" : "default",
        "allowCreation" : true
    },
    "query" : {
        "enabled" : true,
        "enableFullTextSearch" : true,
        "rebuildUponStartup" : "if_missing",
        "indexStorage" : {
            "type" : "ram"
        },
        "textExtracting": {
            "extractors" : {
                "tikaExtractor":{
                    "name" : "Tika content-based extractor",
                    "classname" : "tika",
                    "writeLimit" : 100
                }
            }
        }
    }
}