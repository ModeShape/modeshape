{
    "name" : "DB Repository",
    "storage" : {
        "cacheName" : "db_repository",
        "cacheConfiguration" : "config/db/infinispan-jdbc.xml",
        "binaryStorage" : {
            "type"  : "database",
            "driverClass" : "${dataSource.driverClassName}",
            "url" : "${dataSource.url}",
            "username" : "${dataSource.username}",
            "password" : "${dataSource.password}"
        }
    },
    "workspaces" : {
        "default" : "default",
        "allowCreation" : true
    }
}