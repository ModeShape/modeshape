<?xml version="1.0" encoding="UTF-8"?>
<infinispan xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="urn:infinispan:config:7.2 http://www.infinispan.org/schemas/infinispan-config-7.2.xsd"
            xmlns="urn:infinispan:config:7.2">
    <jgroups>
        <stack-file name="tcp" path="config/jgroups-test-config.xml"/>
    </jgroups>
    <cache-container default-cache="persistentRepository" statistics="false">
        <jmx duplicate-domains="true"/>
        <transport
                cluster="modeshape-cluster"
                stack="tcp"/>
        <!-- 
            Repo cache
        -->
        <replicated-cache name="persistentRepository" mode="SYNC" statistics="false">
            <eviction strategy="LIRS" max-entries="600"/>
            <locking
                    isolation="READ_COMMITTED"
                    acquire-timeout="1000"/>
            <transaction
                    mode="NON_XA"
                    locking="PESSIMISTIC"/>
            <persistence
                    passivation="false">
                <file-store 
                            shared="false"
                            preload="false"
                            purge="true"
                            path="target/clustered/repository_2/store"/>
            </persistence>
        </replicated-cache>
        <!-- 
            Binary data
        -->
        <replicated-cache name="binary-data" mode="SYNC" statistics="false">
            <locking
                    isolation="READ_COMMITTED"
                    acquire-timeout="1000"/>
            <transaction
                    mode="NON_XA"
                    locking="PESSIMISTIC"/>
            <persistence
                    passivation="false">
                <file-store 
                            shared="false"
                            preload="false"
                            purge="true"
                            path="target/clustered/repository_2/binary"/>
            </persistence>
        </replicated-cache>
        <!-- 
            Binary metadata 
        -->
        <replicated-cache name="binary-meta-data" mode="SYNC" statistics="false">
            <locking
                    isolation="READ_COMMITTED"
                    acquire-timeout="1000"/>
            <transaction
                    mode="NON_XA"
                    locking="PESSIMISTIC"/>
            <persistence
                    passivation="false">
                <file-store
                            shared="false"
                            preload="false"
                            purge="true"
                            path="target/clustered/repository_2/binary"/>
            </persistence>
        </replicated-cache>
    </cache-container>
</infinispan>
