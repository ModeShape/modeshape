{
    "name" : "Persistent Repository",
    "jndiName" : "",
    "node-types" : ["cnd/cars.cnd", "cnd/aircraft.cnd"],
    "workspaces" : {
        "default" : "default",
        "allowCreation" : true,
        "initialContent" : {
            "default" : "carsInitialContent.xml"
        }
    },
    "monitoring" : {
        "enabled" : true
    },
    "storage" : {
        "cacheName" : "persistentRepository",
        "cacheConfiguration" : "config/cluster/infinispan-clustered-persistent-2.xml",
        "binaryStorage":{
            "type": "file",
            "directory": "target/clustered/binaries",
            "minimumBinarySizeInBytes": 4096
        }
    },
    "clustering" : {
        //use defaults
    },
    "security" : {
        "anonymous" : {
            "roles" : ["readonly","readwrite","admin"],
            "useOnFailedLogin" : false
        }
    }
}