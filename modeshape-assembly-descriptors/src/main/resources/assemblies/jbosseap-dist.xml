<!--This script builds a zip for ModeShape server Installation -->
<assembly>
	<id>jbosseap-dist</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<baseDirectory>/</baseDirectory>

	<fileSets>
		<!-- The modules part of the kit -->
		<fileSet>
			<directory>../deploy/jbossas/kit/jboss-eap</directory>
			<outputDirectory>${jboss.eap.modules.location}</outputDirectory>
            <excludes>
                <exclude>standalone/**</exclude>
                <exclude>domain/**</exclude>
            </excludes>
            <filtered>true</filtered>
		</fileSet>

		<!-- The configuration part -->
		<fileSet>
			<directory>../deploy/jbossas/kit/jboss-eap</directory>
			<outputDirectory>/</outputDirectory>
            <includes>
                <include>standalone/**</include>
                <include>domain/**</include>
            </includes>
            <filtered>true</filtered>
		</fileSet>

		<!-- ModeShape subsystem XSD(s) -->
		<fileSet>
			<directory>../deploy/jbossas/modeshape-jbossas-subsystem/src/main/resources/schema/</directory>
			<includes>
				<include>modeshape_*.xsd</include>
			</includes>
			<outputDirectory>docs/schema</outputDirectory>
		</fileSet>
    </fileSets>

    <files>
        <!-- Deployment for the ModeShape RESTful service WAR -->
        <file>
            <source>
                ../deploy/jbossas/modeshape-jbossas-web-rest-war/target/modeshape-jbossas-web-rest-war-${project.version}.war
            </source>
            <outputDirectory>${jboss.eap.modules.location}/org/modeshape/main/deployments</outputDirectory>
            <destName>modeshape-rest.war</destName>
        </file>

        <!-- Deployment for the ModeShape WebDAV service WAR -->
        <file>
            <source>
                ../deploy/jbossas/modeshape-jbossas-web-webdav-war/target/modeshape-jbossas-web-webdav-war-${project.version}.war
            </source>
            <outputDirectory>${jboss.eap.modules.location}/org/modeshape/main/deployments</outputDirectory>
            <destName>modeshape-webdav.war</destName>
        </file>

        <!-- Deployment for the ModeShape CMIS service WAR -->
        <file>
            <source>../deploy/jbossas/modeshape-jbossas-cmis-war/target/modeshape-jbossas-cmis-war-${project.version}.war
            </source>
            <outputDirectory>${jboss.eap.modules.location}/org/modeshape/main/deployments</outputDirectory>
            <destName>modeshape-cmis.war</destName>
        </file>

        <!-- Deployment for the ModeShape Explorer -->
        <file>
            <source>../deploy/jbossas/modeshape-jbossas-explorer-war/target/modeshape-jbossas-explorer-war-${project.version}.war
            </source>
            <outputDirectory>${jboss.eap.modules.location}/org/modeshape/main/deployments</outputDirectory>
            <destName>modeshape-explorer.war</destName>
        </file>
    </files>

    <dependencySets>
        <!--Hibernate Search's EAP kit -->
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>${jboss.eap.modules.location}</outputDirectory>
            <includes>
                <include>org.hibernate:hibernate-search-modules</include>
            </includes>
            <unpack>true</unpack>
        </dependencySet>

		<!-- Module for the standard JCR API -->
		<dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>${jboss.eap.modules.location}/javax/jcr/main</outputDirectory>
			<includes>
				<include>javax.jcr:jcr:jar:${version.javax.jcr}</include>
			</includes>
			<unpack>false</unpack>
		</dependencySet>

		<!-- Module for the ModeShape API (extension of the JCR API) -->
		<dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>${jboss.eap.modules.location}/org/modeshape/jcr/api/main</outputDirectory>
			<includes>
				<include>org.modeshape:modeshape-jcr-api:jar</include>
			</includes>
			<unpack>false</unpack>
		</dependencySet>

        <!--Commons module-->
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>${jboss.eap.modules.location}/org/modeshape/common/main</outputDirectory>
            <includes>
                <include>org.modeshape:modeshape-common:jar</include>
            </includes>
            <unpack>false</unpack>
        </dependencySet>

        <!-- Module for the ModeShape engine (and dependencies) -->
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>${jboss.eap.modules.location}/org/modeshape/main</outputDirectory>
            <includes>
                <include>org.modeshape:modeshape-jcr:jar</include>
                <include>org.modeshape:modeshape-jbossas-subsystem:jar</include>
                <include>org.modeshape:modeshape-schematic:jar</include>
            </includes>
            <unpack>false</unpack>
        </dependencySet>

        <!-- Module for Tika (self-contained) -->
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>${jboss.eap.modules.location}/org/apache/tika/${version.org.apache.tika}</outputDirectory>
            <includes>
                <include>org.apache.tika:*:jar</include>
                <include>org.apache.commons:commons-compress:jar:${version.org.apache.commons.compress}</include>
                <include>org.tukaani:*:jar</include>
                <include>org.apache.james:apache-mime4j-core:jar</include>
                <include>org.apache.james:apache-mime4j-dom:jar</include>
                <include>org.apache.pdfbox:*:jar</include>
                <include>org.apache.poi:*:jar:${version.org.apache.poi}</include>
                <include>org.apache.xmlbeans:*:jar</include>
                <include>org.apache.geronimo.specs:*:jar</include>
                <include>dom4j:dom4j:jar:${version.dom4j}</include>
                <include>asm:asm:jar</include>
                <include>commons-codec:commons-codec:jar</include>
                <include>commons-logging:commons-logging:jar:${version.commons-logging}</include>
                <include>com.googlecode.juniversalchardet:juniversalchardet:jar</include>
                <include>org.javassist:javassist:jar:${version.org.javassist}</include>
                <include>org.ccil.cowan.tagsoup:*:jar</include>
                <include>org.gagravarr:*:jar</include>
                <include>com.googlecode.mp4parser:*:jar</include>
                <!-- 
                The following are not currently included by default; see ModeShape's parent POM
                <include>org.bouncycastle:*:jar</include>
                -->
            </includes>
        </dependencySet>

        <!--Connectors-->
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>${jboss.eap.modules.location}/org/modeshape/connector/git/main</outputDirectory>
            <includes>
                <include>org.modeshape:modeshape-connector-git:jar</include>
                <include>org.eclipse.jgit:org.eclipse.jgit:jar</include>
                <include>com.jcraft:jsch:jar</include>
            </includes>
        </dependencySet>

        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>${jboss.eap.modules.location}/org/modeshape/connector/jdbc/metadata/main</outputDirectory>
            <includes>
                <include>org.modeshape:modeshape-connector-jdbc-metadata:jar</include>
                <include>com.mchange:c3p0:jar</include>
            </includes>
        </dependencySet>

        <!--Sequencers-->
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>${jboss.eap.modules.location}/org/modeshape/sequencer/ddl/main</outputDirectory>
            <includes>
                <include>org.modeshape:modeshape-sequencer-ddl:jar</include>
            </includes>
        </dependencySet>

        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>${jboss.eap.modules.location}/org/modeshape/sequencer/image/main</outputDirectory>
            <includes>
                <include>org.modeshape:modeshape-sequencer-images:jar</include>
                <include>com.drewnoakes:metadata-extractor:jar</include>
                <include>com.adobe.xmp:xmpcore:jar</include>
            </includes>
        </dependencySet>

        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>${jboss.eap.modules.location}/org/modeshape/sequencer/java/main</outputDirectory>
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <includes>
                <include>org.modeshape:modeshape-sequencer-java:jar</include>
                <include>org.javassist:javassist:jar:${version.org.javassist}</include>
                <include>org.eclipse*:common:jar:${version.org.eclipse.equinox.common}</include>
                <include>org.eclipse*:core:jar:${version.org.eclipse.jdt.core}</include>
                <include>org.eclipse*:resources:jar:${version.org.eclipse.core.resources}</include>
                <include>org.eclipse*:expressions:jar:${version.org.eclipse.core.expressions}</include>
                <include>org.eclipse*:preferences:jar:${version.org.eclipse.equinox.preferences}</include>
                <include>org.eclipse*:runtime:jar:${version.org.eclipse.core.runtime}</include>
                <include>org.eclipse*:osgi:jar:${version.org.eclipse.osgi}</include>
                <include>org.eclipse*:jobs:jar:${version.org.eclipse.core.jobs}</include>
                <include>org.eclipse*:registry:jar:${version.org.eclipse.equinox.registry}</include>
                <include>org.eclipse*:contenttype:jar:${version.org.eclipse.core.contenttype}</include>
            </includes>
        </dependencySet>

        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>${jboss.eap.modules.location}/org/modeshape/sequencer/mp3/main</outputDirectory>
            <includes>
                <include>org.modeshape:modeshape-sequencer-mp3:jar</include>
                <include>org:jaudiotagger:jar</include>
            </includes>
        </dependencySet>

        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>${jboss.eap.modules.location}/org/modeshape/sequencer/msoffice/main</outputDirectory>
            <includes>
                <include>org.modeshape:modeshape-sequencer-msoffice:jar</include>
                <include>org.apache*:poi:jar:${version.org.apache.poi}</include>
                <include>org.apache*:poi-scratchpad:jar:${version.org.apache.poi}</include>
            </includes>
        </dependencySet>

        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>${jboss.eap.modules.location}/org/modeshape/sequencer/sramp/main</outputDirectory>
            <includes>
                <include>org.modeshape:modeshape-sequencer-sramp:jar</include>
            </includes>
        </dependencySet>

        <dependencySet>
            <outputDirectory>${jboss.eap.modules.location}/org/modeshape/sequencer/teiid/main</outputDirectory>
            <includes>
                <include>org.modeshape:modeshape-sequencer-teiid:jar</include>
                <include>com.beust:jcommander:jar</include>
            </includes>
        </dependencySet>

        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>${jboss.eap.modules.location}/org/modeshape/sequencer/text/main</outputDirectory>
            <includes>
                <include>org.modeshape:modeshape-sequencer-text:jar</include>
            </includes>
        </dependencySet>

        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>${jboss.eap.modules.location}/org/modeshape/sequencer/wsdl/main</outputDirectory>
            <includes>
                <include>org.modeshape:modeshape-sequencer-wsdl:jar</include>
                <include>wsdl4j:wsdl4j:jar</include>
            </includes>
        </dependencySet>

        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>${jboss.eap.modules.location}/org/modeshape/sequencer/xml/main</outputDirectory>
            <includes>
                <include>org.modeshape:modeshape-sequencer-xml:jar</include>
            </includes>
        </dependencySet>

        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>${jboss.eap.modules.location}/org/modeshape/sequencer/xsd/main</outputDirectory>
            <includes>
                <include>org.modeshape:modeshape-sequencer-xsd:jar</include>
                <include>org.eclipse*:xsd:jar:${version.org.eclipse.xsd}</include>
                <include>org.eclipse*:common:jar:${version.org.eclipse.emf.common}</include>
                <include>org.eclipse*:ecore:jar:${version.org.eclipse.emf.ecore}</include>
                <include>org.eclipse*:ecore-change:jar:${version.org.eclipse.emf.ecore-change}</include>
                <include>org.eclipse*:ecore-xmi:jar:${version.org.eclipse.emf.ecore-xmi}</include>
            </includes>
        </dependencySet>

        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>${jboss.eap.modules.location}/org/modeshape/sequencer/zip/main</outputDirectory>
            <includes>
                <include>org.modeshape:modeshape-sequencer-zip:jar</include>
            </includes>
        </dependencySet>

        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>${jboss.eap.modules.location}/org/modeshape/extractor/tika/main</outputDirectory>
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <includes>
                <include>org.modeshape:modeshape-extractor-tika:jar</include>
            </includes>
        </dependencySet>

		<!-- Module for the ModeShape JDBC driver -->
		<dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>${jboss.eap.modules.location}/org/modeshape/jdbc/main</outputDirectory>
			<includes>
				<include>org.modeshape:modeshape-jdbc-local:jar</include>
			</includes>
			<unpack>false</unpack>
		</dependencySet>
    </dependencySets>
</assembly>
