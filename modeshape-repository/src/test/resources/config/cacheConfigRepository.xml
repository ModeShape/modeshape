<configuration xmlns:mode="http://www.modeshape.org/1.0"
               xmlns:jcr="http://www.jcp.org/jcr/1.0"
               xmlns:nt="http://www.jcp.org/jcr/nt/1.0">
    <!-- Define the sources from which content is made available. -->
    <mode:sources jcr:primaryType="nt:unstructured">
        <mode:source jcr:name="Cache" mode:classname="org.modeshape.repository.FakeRepositorySource">
            <defaultWorkspaceName>default</defaultWorkspaceName>
            <mode:cachePolicy jcr:name="cachePolicy" 
            	mode:classname="org.modeshape.graph.connector.path.cache.InMemoryWorkspaceCache$InMemoryCachePolicy"
            	mode:timeToLive="30"
             />
        </mode:source>
    </mode:sources>
    <!-- No sequencers required. -->
    <!-- No additional MIME type detectors required -->
</configuration>
